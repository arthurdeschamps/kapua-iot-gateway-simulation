teal = #00d1b2
lightGray = #4a4a4a

animation(transformation...)
  -webkit-animation transformation /* Safari 4+ */
  -moz-animation transformation /* Fx 5+ */
  -o-animation transformation /* Opera 12+ */
  animation transformation /* IE 10+, Fx 29+ */

box-shadow(args...)
  -webkit-box-shadow args
  -moz-box-shadow args
  box-shadow args

transformWithDuration(anim, duration)
  -webkit-transition-duration duration
  transition-duration duration
  transform anim

:host
  #parametrizer
    background-color #f9f9f9
    text-align center
    color lightGray

    @media screen and (max-width: 600px)
      .container
        margin-right 10px
        margin-left 10px

    > .container
      margin-top 50px

    #settings
      #save-settings
        clear both
        margin-top 20px
        margin-bottom 20px
        box-shadow 0 6px 0 darken(teal, 40%)

      .clicked
        transformWithDuration(translateY(4px), 0.1s)
        box-shadow 0 2px 0 darken(teal, 40%) !important

      #rocket-wrapper
        clear both
        margin-top 100px

        @keyframes spin
          from
            transform: rotate(0deg) translate(-70px) rotate(-90deg)
          to
            transform: rotate(360deg) translate(-70px) rotate(-90deg)

        spinningAnimation = spin 3s linear infinite


        #rocket
          width 60px
          height 80px
          position relative
          top -50px
          animation spinningAnimation


      .input-field
        max-width 60%
        min-width 60%
        margin-bottom 40px
        margin-left auto
        margin-right auto
        padding 0

        input
          -webkit-appearance none
        input:focus
          outline none


        .input-title
        .input-subtitle
          text-align left
          min-width 100%

        .input-title
          min-width 100%
          font-size 1.2em
          color lighten(@color, 10%)

        .input-subtitle
          font-size 0.8em
          font-style italic
          color lighten(@color, 20%)

      @media screen and (max-width: 600px)
        .input-field
          min-width 80%

      .text-input, .number-input
        input
          min-width 100%
          font-size 20px
          color lighten(@color, 5%)
          border none
          border-bottom 1px solid #9e9e9e
          padding 0
          height 40px
          line-height 40px
          text-align center
          background-color lighten(@background-color, 15%)

          &:hover, &:active, &:focus
            border-bottom-color teal

      .number-input
        input
          min-width 10%
          max-width 10%
          text-align center

      .choice-input
        margin-bottom 10px
        div
          margin-top 10px
          display flex
          flex-direction row
          justify-content center

          .choice
            background-color #001f3f
            color whitesmoke
            opacity 0.3
            width 100px
            height 2em
            overflow-x scroll
            cursor pointer

            span
              padding 5px

          .selected-choice
            opacity 1
            transformWithDuration(scale(1.2, 1.2), 0.4s)


      .slider
        margin-bottom 0

        input
          max-width 300px
          min-width 70%
          margin-top 40px
          background transparent

        indication(val, side)
          content val
          margin-{side} 10px
          font-size 13px

        input:before
          indication("Turtle", "right")
        input:after
          indication("Rocket", "left")

        @media screen and (max-width: 600px)
          input:before, input:after
            indication("","")

        input::-ms-track
          width 100%
          cursor pointer

          /* Hides the slider so custom styles can be added */
          background transparent
          border-color transparent
          color transparent

        thumb()
          border 1px solid teal
          height 30px
          width 30px
          border-radius 100%
          background teal
          cursor pointer

        input::-webkit-slider-thumb
          -webkit-appearance none
          thumb()
          margin-top -14px

        input::-moz-range-thumb
          thumb()

        input::-ms-thumb
          thumb()

        track()
          width 100%
          height 1px
          cursor pointer

        trackBackground()
          background lightGray

        input::-webkit-slider-runnable-track
          track()
          trackBackground()
          border-radius 1.3px

        input:focus
          &::-webkit-slider-runnable-track
            trackBackground()
          &::-ms-fill-lower
            trackBackground()
          &::-ms-fill-upper
            trackBackground()

        input::-moz-range-track
          track()
          trackBackground()
          border-radius 1.3px

        input::-ms-track
          track()
          background transparent
          border-color transparent
          border-width 16px 0
          color transparent

        input::-ms-fill-lower
          trackBackground()
          border-radius 2.6px

        input::-ms-fill-upper
          trackBackground()
          border-radius 2.6px
