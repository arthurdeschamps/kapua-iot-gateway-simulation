teal = #00d1b2
lightGray = #4a4a4a

:host
  #parametrizer
    background-color #f9f9f9
    text-align center
    color lightGray

    > .container
      margin-top 50px

    #settings

      .input-field
        max-width 60%
        min-width 60%
        margin-bottom 40px
        margin-left auto
        margin-right auto
        padding 0

        input
          -webkit-appearance none
        input:focus
          outline none


        .input-title
        .input-subtitle
          text-align left
          min-width 100%

        .input-title
          min-width 100%
          font-size 1.2em
          color lighten(@color, 10%)

        .input-subtitle
          font-size 0.8em
          font-style italic
          color lighten(@color, 20%)

      .text-input
        input
          min-width 100%
          font-size 20px
          color lighten(@color, 5%)
          border none
          border-bottom 1px solid #9e9e9e
          padding 0
          height 40px
          line-height 40px
          text-align center
          background-color lighten(@background-color, 15%)

          &:hover, &:active, &:focus
            border-bottom-color teal

      .slider
        input
          max-width 300px
          min-width 70%
          margin-top 40px
          background transparent

        indication(val, side)
          content val
          margin-{side} 10px
          font-size 13px

        input:before
          indication("1x", "right")
        input:after
          indication("10000x", "left")

        input::-ms-track
          width 100%
          cursor pointer

          /* Hides the slider so custom styles can be added */
          background transparent
          border-color transparent
          color transparent

        thumb()
          border 1px solid teal
          height 30px
          width 30px
          border-radius 100%
          background teal
          cursor pointer

        input::-webkit-slider-thumb
          -webkit-appearance none
          thumb()
          margin-top -14px

        input::-moz-range-thumb
          thumb()

        input::-ms-thumb
          thumb()

        track()
          width 100%
          height 1px
          cursor pointer

        trackBackground()
          background lightGray

        input::-webkit-slider-runnable-track
          track()
          trackBackground()
          border-radius 1.3px

        input:focus
          &::-webkit-slider-runnable-track
            trackBackground()
          &::-ms-fill-lower
            trackBackground()
          &::-ms-fill-upper
            trackBackground()

        input::-moz-range-track
          track()
          trackBackground()
          border-radius 1.3px

        input::-ms-track
          track()
          background transparent
          border-color transparent
          border-width 16px 0
          color transparent

        input::-ms-fill-lower
          trackBackground()
          border-radius 2.6px

        input::-ms-fill-upper
          trackBackground()
          border-radius 2.6px
